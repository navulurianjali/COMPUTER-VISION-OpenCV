import cv2
import numpy as np

img = cv2.imread("C:\Program Files\OpenCV\img1.png", 0)

if img is None:
    print("Image not found")
    exit()

positive_laplacian = np.array([[0, -1, 0],
                               [-1, 5, -1],
                               [0, -1, 0]])

sharpened = cv2.filter2D(img, -1, positive_laplacian)

cv2.imshow("Original Image", img)
cv2.imshow("Sharpened Image (Positive Center)", sharpened)

cv2.waitKey(0)
cv2.destroyAllWindows()
